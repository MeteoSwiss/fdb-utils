pipeline {
    options {
        // the variable $WORKSPACE is assigned dynamically at the beginning of every stage
        // and might change depending on the number of concurrent builds active.
        // The virtual environment is not relocatable.
        disableConcurrentBuilds()
    }

    agent {
        label 'balfrin'
    }

    triggers {
        // We expect the ICON-CH2-EPS forecast to be fully archived 3.5 hours after the job starts.
        cron('TZ=UTC\n30 3,9,15,21 * * *')
    }

    stages {
        stage('run status check') {
            when {
                anyOf {
                    triggeredBy 'UserIdCause';
                    branch 'main'
                }
            }
            steps {
                script {
                    try {
                        build(
                            job: "../ArchiveStatusBase/${env.BRANCH_NAME}",
                            propagate: true,
                            parameters: [string(name: 'model', value: 'icon-ch2-eps')]
                        )
                    } finally {
                        copyArtifacts(
                            projectName: '../ArchiveStatusBase/jenkins-archive-status',
                            filter: '**/*heatmap*ch2*.png',
                            fingerprintArtifacts: true,
                            selector: lastCompleted()
                        )
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace'
            deleteDir()
        }
    }
}
